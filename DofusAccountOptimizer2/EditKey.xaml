<Window x:Class="DofusAccountOptimizer2.EditKey"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DofusAccountOptimizer2"
        xmlns:classes="clr-namespace:DofusAccountOptimizer2.Classes"
        xmlns:prop="clr-namespace:DofusAccountOptimizer2.Properties"
        mc:Ignorable="d"
        Title="EditKey" Height="200" Width="450" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <classes:KeyConverter x:Key="keyConverter" />
    </Window.Resources>
    <Grid>
        <Label Content="Press the keys you want to use to siwtch between and then press save"></Label>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Text="{Binding KeyCodes,Converter={StaticResource keyConverter}}" Width="200" FontSize="14" />
        <Button Content="Save" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,5,5,0" Click="Button_Click"></Button>
        <Button Content="Cancel" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,5,50,0"></Button>
    </Grid>
</Window>
