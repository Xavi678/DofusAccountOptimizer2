<UserControl x:Class="DofusAccountOptimizer2.Personatge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DofusAccountOptimizer2"
             mc:Ignorable="d" d:DesignWidth="143
             " Width="143" Height="143" BorderThickness="1" BorderBrush="Black">
    <Grid Margin="0,0,0,0">
        <Image x:Name="image" Height="56" VerticalAlignment="Top" Width="56" Margin="0,10,0,0"/>
        <Button x:Name="btnDreta" Content="&gt;" HorizontalAlignment="Right" 
                VerticalAlignment="Top" Width="25" Height="40" Margin="0,17,10,0"/>
        <Button x:Name="btnEsquerra" Content="&lt;" HorizontalAlignment="Left" 
                VerticalAlignment="Top" Width="25" Height="40" Margin="10,17,0,0"/>
        <Label x:Name="lblNom" Content="Label" Margin="0,70,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Width="50"/>
        <Label x:Name="lblClasse" Content="Label" Margin="0,105,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Width="50"/>
    </Grid>
</UserControl>
